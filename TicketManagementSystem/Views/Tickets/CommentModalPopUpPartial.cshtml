@model TicketManagementSystem.Core.Models.Comment

<div class="row">
    <div class="col-md-12">
        <form asp-action="AddComment">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TicketId" />            
            <div class="form-group">
                @*<label asp-for="CommentText" class="control-label"></label>*@
                <textarea asp-for="CommentText" rows="4" class="form-control"></textarea>
                <span asp-validation-for="CommentText" class="text-danger"></span>
            </div>  
            <div class="form-group" align="center">
                <input type="submit" value="Lägg till kommentar" class="btn btn-primary" />
            </div>
        </form>
        <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal" id="btnHideModal">Stänga</button>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
